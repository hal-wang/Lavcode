<hlucd:LayoutDialog
    x:Class="Hubery.Lavcode.Uwp.View.Feedback.FeedbackDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Hubery.Lavcode.Uwp.Controls"
    xmlns:hlucd="using:Hubery.Lavcode.Uwp.Controls.Dialog"
    xmlns:local="using:Hubery.Lavcode.Uwp.View.Feedback"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Title="反馈"
    IsExitButtonVisible="True"
    PrimaryButtonText="完成"
    SecondaryButtonText="取消"
    DefaultButton="Primary"
    PrimaryButtonClick="LayoutDialog_PrimaryButtonClick">

    <hlucd:LayoutDialog.DataContext>
        <local:FeedbackDialogViewModel x:Name="VM"/>
    </hlucd:LayoutDialog.DataContext>

    <StackPanel Width="340">
        <StackPanel.Resources>
            <Style TargetType="TextBlock" x:Key="Label">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Width" Value="40" />
            </Style>
        </StackPanel.Resources>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="内容"
                       Style="{ThemeResource Label}"
                       VerticalAlignment="Top"/>
            <TextBox PlaceholderText="填写反馈内容（支持 Markdown）"
                     AcceptsReturn="True"
                     MinHeight="100"
                     MaxHeight="200"
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     Text="{x:Bind VM.Content,Mode=TwoWay}"/>
            <Button Style="{ThemeResource LightButtonStyle}"
                    ToolTipService.ToolTip="预览"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="Preview_Click">
                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                          Glyph="&#xE7B3;"/>
            </Button>
        </Grid>
        
        <Grid Margin="0 20 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="账号"
                       Style="{StaticResource Label}"/>
            <TextBox Text="{x:Bind VM.Account,Mode=TwoWay}"
                     PlaceholderText="填写GitHub账号"
                     Grid.Column="1"
                     x:Name="AccountTextBox"/>
