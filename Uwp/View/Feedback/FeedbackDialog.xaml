                    VerticalAlignment="Center"
                    Margin="6 0 0 0"
                    Grid.Column="2"
                    Click="Signup_Click"/>
        </Grid>

        <Grid Margin="0 10 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="密码"
                       Style="{StaticResource Label}"/>
            <PasswordBox Password="{x:Bind VM.Password,Mode=TwoWay}"
                         PlaceholderText="填写GitHub密码"
                         Grid.Column="1"
                         x:Name="AccountPasswordBox"/>
        </Grid>

        <TextBlock Text="没有有任何人会获取您的密码。"
                   Margin="40 0 0 0"
                   FontSize="11"/>

        <CheckBox Content="记住密码"
                  IsChecked="{x:Bind VM.Remember,Mode=TwoWay}"
                  Margin="40 0 0 0"
                  Grid.Row="4"
                  Grid.Column="1"/>
    </StackPanel>

</hlucd:LayoutDialog>
