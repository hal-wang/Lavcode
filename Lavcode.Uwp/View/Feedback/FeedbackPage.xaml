        </hluc:Header>

        <Grid Grid.Row="1"
              Margin="0 20">
            <StackPanel Orientation="Horizontal">
                <Button Style="{ThemeResource AccentButtonStyle}"
                        Content="反馈"
                        Width="120"
                        Margin="80 0 0 0"
                        Click="{x:Bind VM.HandleFeedback}"/>
                <Button Style="{ThemeResource AccentButtonStyle}"
                        Content="打分与评价"
                        Width="120"
                        Margin="40 0 0 0"
                        Click="Rating_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <TextBlock Text="总数："
                           VerticalAlignment="Center"/>
                <TextBlock Text="{x:Bind VM.Count,Mode=OneWay}"
                           Visibility="{x:Bind VM.Issue,Mode=OneWay,Converter={StaticResource IsNullConverter},ConverterParameter=T}"
                           VerticalAlignment="Center"/>
                <TextBlock Text="未获取"
                           FontSize="11"
                           Opacity="0.7"
                           Visibility="{x:Bind VM.Issue,Mode=OneWay,Converter={StaticResource IsNullConverter}}"
                           VerticalAlignment="Center"/>
                <Button Style="{ThemeResource LightButtonStyle}"
                        ToolTipService.ToolTip="刷新"
                        Margin="20 0"
                        Click="{x:Bind VM.HandleRefresh}">
                    <SymbolIcon Symbol="Refresh"/>
                </Button>
            </StackPanel>
        </Grid>

        <hlucc:CommentList Grid.Row="2"
                           Comments="{x:Bind VM.Feedbacks,Mode=OneWay}"/>
    </Grid>
</Page>
