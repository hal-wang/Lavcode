                            Grid.Column="2"
                            Margin="40 0 0 0"
                            VerticalAlignment="Center">
                    <TextBlock Text="总数："
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Bind VM.Issue.Comments,Mode=OneWay}"
                               Visibility="{x:Bind VM.Issue,Mode=OneWay,Converter={StaticResource IsNullConverter},ConverterParameter=T}"
                               VerticalAlignment="Center"/>
