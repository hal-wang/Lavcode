            <CheckBox HorizontalAlignment="Center"
                      Grid.Row="2"
                      IsChecked="{x:Bind IsPpChecked,Mode=TwoWay}"
                      x:Name="PpCheckBox">
                <StackPanel Orientation="Horizontal"
                            Margin="0 -4 0 0">
                    <TextBlock Text="已阅读并同意"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                    <HyperlinkButton Content="隐私政策"
                                     FontSize="12"
                                     VerticalAlignment="Center"
                                     Padding="2 6"
                                     Click="Pp_Click"/>
