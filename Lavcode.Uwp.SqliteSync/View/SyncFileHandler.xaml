<UserControl
    x:Class="Lavcode.Uwp.SqliteSync.View.SyncFileHandler"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Margin="0 2"
     Visibility="{x:Bind OpenedFile,Mode=OneWay,Converter={StaticResource IsNullConverter},ConverterParameter=true}">

    <Border Visibility="{x:Bind IsDbChanged,Mode=OneWay,Converter={StaticResource BooleanConverter}}">
        <StackPanel Orientation="Horizontal">
            <Button Style="{ThemeResource AccentButtonStyle}"
                    Content="保存"
                    VerticalAlignment="Stretch"
                    Padding="6 0"
                    Click="UpdateToFile_Click"/>
            <Button Style="{ThemeResource AccentButtonStyle}"
                    Content="另存为"
                    VerticalAlignment="Stretch"
                    Padding="6 0"
                    Margin="10 0 0 0"
                    Click="SaveAs_Click"/>
        </StackPanel>
    </Border>
</UserControl>
